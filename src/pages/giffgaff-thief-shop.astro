---
import { fade } from "astro:transitions";
import Layout from "../layouts/Layout.astro";

const cabecera = {
  src: "THIEF_SHOP/1.gif",
  alt: "Cabecera",
};
const racional = {
  src: "THIEF_SHOP/2.png",
  alt: "racional",
};
const bocetos = {
  src: "THIEF_SHOP/4.gif",
  alt: "Bocetos",
};
const footer = {
  src: "THIEF_SHOP/5.gif",
  alt: "Footer",
};
const videoSrc =
  "https://player.vimeo.com/video/945923270?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479";
---

<Layout
  title="GiffGaff - Thief Shop"
  description="Giffgaff quería hacer una campaña de PR para dar a conocer sus móviles de segunda mano en Londres. Capitar europea de los robos de móviles"
  favicon="GIFFGAFF.png"
>
  <main
    transition:name={`image-giffgaff-thief-shop`}
    transition:animate={fade({ duration: "0.6s" })}
  >
    <section class="image-section">
      <img
        src={cabecera.src}
        alt={cabecera.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>
    <section class="image-section">
      <img
        src={racional.src}
        alt={racional.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>
    <section class="video-section">
      <iframe
        src={videoSrc}
        title="Giffgaff"
        class="full-width-video"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        sandbox="allow-same-origin allow-scripts allow-pointer-lock allow-forms allow-popups"
      ></iframe>
    </section>

    <section class="image-section">
      <img
        src={bocetos.src}
        alt={bocetos.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>

    <section class="image-section">
      <img
        src={footer.src}
        alt={footer.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>
  </main>
</Layout>
