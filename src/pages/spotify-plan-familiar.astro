---
import { fade } from "astro:transitions";
import Layout from "../layouts/Layout.astro";

const cabecera = {
  src: 'PLAN_FAMILIAR/1.gif',
  alt: "Cabecera",
};
const mockup = {
  src: 'PLAN_FAMILIAR/2.png',
  alt: "mockup",
};
const frases = {
  src: 'PLAN_FAMILIAR/3.gif',
  alt: "Frases",
};
const footer = {
  src: 'PLAN_FAMILIAR/4.png',
  alt: "Footer",
};
---

<Layout
  title="Spotify Plan Familiar"
  description="El plan familiar son los padres"
  favicon="PLAN_FAMILIAR.webp"
>
  <main
    class="main-project"
    transition:name={`image-spotify-plan-familiar`}
    transition:animate={fade({ duration: "0.6s" })}
  >
    <section class="image-section">
      <img
        src={cabecera.src}
        alt={cabecera.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>
    <section class="image-section">
      <img
        src={mockup.src}
        alt={mockup.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>

    <section class="image-section">
      <img
        src={frases.src}
        alt={frases.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>

    <section class="image-section">
      <img
        src={footer.src}
        alt={footer.alt}
        class="full-width-image"
        loading="lazy"
      />
    </section>
  </main>
</Layout>
