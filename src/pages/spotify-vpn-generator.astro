---
import Layout from "../layouts/Layout.astro";

const cabecera = {
  src: "VPN/1.mp4",
  alt: "Cabecera",
};
const texto = {
  src: "VPN/2.mp4",
  alt: "Texto",
};
const moviles = {
  src: "VPN/4.mp4",
  alt: "Moviles",
};
const mapas = {
  src: "VPN/5.mp4",
  alt: "Mapas",
};
const footer = {
  src: "VPN/6.mp4",
  alt: "Footer",
};

const videoSrc =
  "https://player.vimeo.com/video/936601328?h=12cb3368ef&amp;title=0&amp;byline=0&amp;portrait=0";
---

<Layout
  title="Spotify VPN Generator"
  description="Spotify VPN Generator"
  favicon="SPOTIFY.webp"
>
  <main
    class="main-project"
  >
    <section class="image-section">
      <!-- <img
        src={cabecera.src}
        alt={cabecera.alt}
        class="full-width-image"
        loading="lazy"
      /> -->
      <video autoplay loop muted playsinline>
        <source src={cabecera.src} type="video/mp4" />
      </video>
    </section>

    <section class="image-section">
      <!-- <img
        src={texto.src}
        alt={texto.alt}
        class="full-width-image"
        loading="lazy"
      /> -->
      <video autoplay loop muted playsinline>
        <source src={texto.src} type="video/mp4" />
      </video>
    </section>

    <section class="video-section">
      <iframe
        src={videoSrc}
        title="Spotify"
        class="full-width-video"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        sandbox="allow-same-origin allow-scripts allow-pointer-lock allow-forms allow-popups"
      ></iframe>
    </section>
    <section class="image-section">
      <!-- <img
        src={moviles.src}
        alt={moviles.alt}
        class="full-width-image"
        loading="lazy"
      /> -->
      <video autoplay loop muted playsinline>
        <source src={moviles.src} type="video/mp4" />
      </video>
    </section>

    <section class="image-section">
      <!-- <img
        src={mapas.src}
        alt={mapas.alt}
        class="full-width-image"
        loading="lazy"
      /> -->
      <video autoplay loop muted playsinline>
        <source src={mapas.src} type="video/mp4" />
      </video>
    </section>

    <section class="image-section">
      <!-- <img
        src={footer.src}
        alt={footer.alt}
        class="full-width-image"
        loading="lazy"
      /> -->
      <video autoplay loop muted playsinline>
        <source src={footer.src} type="video/mp4" />
      </video>
    </section>
  </main>
</Layout>
